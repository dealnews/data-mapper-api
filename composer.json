{
    "name": "dealnews/data-mapper-api",
    "type": "library",
    "description": "API wrapper around data-mapper library",
    "config": {
        "optimize-autoloader": true,
        "discard-changes": true,
        "sort-packages": true
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.88",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "phpunit/phpunit": "^11"
    },
    "require": {
        "php": "^8.2",
        "dealnews/data-mapper": "^3.3",
        "dealnews/db": "^4.0",
        "moonspot/value-objects": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "DealNews\\DataMapperAPI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DealNews\\DataMapperAPI\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phan": [
            "phan"
        ],
        "test": [
            "parallel-lint src/ tests/",
            "phpunit --colors=never"
        ],
        "lint": [
            "parallel-lint src/ tests/"
        ],
        "fix": [
            "php-cs-fixer fix --config .php-cs-fixer.dist.php src tests"
        ]
    }
}
